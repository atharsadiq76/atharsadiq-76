<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_call"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a4aeed"
    tools:context="constantrebel.com.athar.myapplication.CallActivity">

    <Button
        android:text="Call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:textSize="40sp"
        android:textColor="@color/colorPrimary"
        android:background="#c3c5ca"
        android:id="@+id/idbtnCall"
        android:onClick="btnClick"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textSize="30sp"
        android:layout_marginTop="150dp"
        android:textColor="#000000"
        android:background="#84868b"
        android:inputType="number"
        android:hint="Enter Number"
        android:id="@+id/idNumtxt"
        />

    <TextView
        android:text="Call"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="45sp"
        android:textColor="#ab3052"
        android:textAlignment="center"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
