<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_message_send"
    android:layout_width="match_parent"
    android:background="#a4aeed"
    android:layout_height="match_parent"
    tools:context="constantrebel.com.athar.myapplication.MessageConversation">


    <TextView
        android:text="Conversations"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#ab3052"
        android:background="#a4aeed"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView4"
        android:layout_above="@+id/idList" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="#84868b"
        android:id="@id/idList"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        </ListView>

</RelativeLayout>
